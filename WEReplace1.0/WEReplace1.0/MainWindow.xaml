        <CheckBox Content="Ограничиться одним столбцом при замене значений" HorizontalAlignment="Left" Margin="10,286,0,0" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="318" Checked="CheckBox_Checked"/>

